apiVersion: apps/v1
kind: Deployment
metadata:
  name: api
  namespace: {{ .Values.namespace }}
spec:
  replicas: {{ .Values.api.replicas }}
  selector:
    matchLabels:
      app: api
  template:
    metadata:
      labels:
        app: api
    spec:
      containers:
        - name: api
          image: {{ .Values.api.image }}
          ports:
            - containerPort: {{ .Values.api.port }}
          env:
            - name: DATABASE_URL
              valueFrom:
                secretKeyRef:
                  name: {{ .Values.postgres.envFromSecret | default "postgres-secret" }}
                  key: DATABASE_URL
          command: ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]

      initContainers:
        - name: run-migrations
          image: {{ .Values.api.image }}  # Reuse the same image
          command:
            - /bin/sh
            - -c
            - |
              echo "⏳ Waiting for PostgreSQL..."
              until pg_isready -h db -p 5432 -U $POSTGRES_USER; do sleep 2; done
              echo "✅ DB is ready. Running migrations..."
              alembic upgrade head
          env:
            - name: DATABASE_URL
              valueFrom:
                secretKeyRef:
                  name: {{ .Values.postgres.envFromSecret | default "postgres-secret" }}
                  key: DATABASE_URL
            - name: POSTGRES_USER
              valueFrom:
                secretKeyRef:
                  name: {{ .Values.postgres.envFromSecret | default "postgres-secret" }}
                  key: POSTGRES_USER
